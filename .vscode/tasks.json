        {
            "label": "release-build-g++",
            "presentation": { // dont show the task output unless there is an error
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "close": false,
                "showReuseMessage": false,
                "clear": false
            },
            "type": "shell",
            "dependsOn": ["create-build-folder", "create-release-folder"],
            "command": "g++",
            "args": [
                "${file}",
                "-O3",
                "-std=c++2b",
                "-o",
                "${workspaceFolder}/build/release/${fileBasenameNoExtension}.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
        },
        {
            "label": "release-build-gcc",
            "presentation": { // dont show the task output unless there is an error
